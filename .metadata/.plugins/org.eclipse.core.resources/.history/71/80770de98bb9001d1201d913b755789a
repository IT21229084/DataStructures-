package q02;


public class queue {
	
		private int myArr [];
		    
		    private int maxSize;
		    private int front;
		    private int rear;
		    private int nItems;
		    
		    public queue (int size)
		    {
		       maxSize = size;
		       myArr = new int[maxSize];
		       front = 0;
		       rear = -1;
		       nItems = 0; 
		    }
		    
		    public void insert(int value)
		    {
			if (nItems == maxSize)
				System.out.println("Queue is full");
			else
			{
		       		if(rear == maxSize - 1)
		            		rear = -1;
		       		myArr[++rear] = value;
		       		nItems++; 
			} 
		    }
		    public int remove()
		    {
			if (nItems == 0)
				return 'z';
			else
			{
		      		int temp = myArr[front++]; 
		      		if(front == maxSize)
		        		front = 0;
		      		nItems--; 
		      		return temp;
			}
		    }
		    public boolean isEmpty() // true if queue is empty
		    {
		        return (nItems == 0);
		    }
		    public boolean isFull() // true if queue is full
		    {
		        return (nItems == maxSize);
		    }
		}

	

